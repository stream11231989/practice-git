@model GuestBooks.ViewModels.MembersRegisterViewModel

@{
    ViewBag.Title = "註冊";
}
@*匯入驗證用所需的JavaScript*@
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }


<h2>註冊</h2>
@*建立註冊會員所需的表單*@
@using (Html.BeginForm()) 
{
   @Html.ValidationSummary(true)
    @*建立註冊帳號資料內容所使用的表格*@
    <table>
        <tr>
            <td>
                @Html.LabelFor(m=>m.newMember.Account)
            </td>
            <td>
                @Html.TextBoxFor(m=>m.newMember.Account)
                @Html.ValidationMessageFor(m=>m.newMember.Account)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m=>m.Password)
            </td>
            <td>
                @Html.PasswordFor(m=>m.Password)
                @Html.ValidationMessageFor(m=>m.Password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m=>m.PasswordCheck)
            </td>
            <td>
                @Html.PasswordFor(m=>m.PasswordCheck)
                @Html.ValidationMessageFor(m=>m.PasswordCheck)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m=>m.newMember.Name)
            </td>
            <td>
                @Html.TextBoxFor(m=>m.newMember.Name)
                @Html.ValidationMessageFor(m=>m.newMember.Name)
            </td>
        </tr>
         <tr>
            <td>
                @Html.LabelFor(m=>m.newMember.Email)
            </td>
            <td>
                @Html.TextBoxFor(m=>m.newMember.Email)
                @Html.ValidationMessageFor(m=>m.newMember.Email)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="註冊" />

            </td>
        </tr>
    </table>
}

