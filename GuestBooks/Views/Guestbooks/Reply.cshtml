@model GuestBooks.Models.Guestbooks
@{
    ViewBag.Title = "回覆留言";
}
@*建立回覆留言所需的表單*@
@using (Html.BeginForm())
{
    <h3>回覆留言</h3>
    @*建立回覆留言所需的表單*@
    <table>
        <tr>
            <td>
                @Html.LabelFor(m => m.Name)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Content)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Content)
                @Html.ValidationMessageFor(m => m.Content)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Reply)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Reply)
                @Html.ValidationMessageFor(m => m.Reply)
            </td>
        </tr>
    </table>
    @*一則留言僅可回覆一次，若被回覆，則顯示返回列表連結*@
    if (Model.ReplyTime == null)
    {
        <input type="submit" value="回覆留言" />
    }
    else
    {
        <text>此留言已回覆，請</text>
        @Html.ActionLink("返回列表","Index")
    }
    @section scripts
        {
        @Scripts.Render("~/bundles/jqueryval.js")
        
        }
}

